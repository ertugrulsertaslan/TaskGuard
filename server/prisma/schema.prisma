datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String
  role          Role
  accessToken   String?  
  refreshToken  String? 
}
enum Role {
  VIEWER
  EDITOR
  ADMIN
  SUPERADMIN
}

model Task {
  id       Int      @id @default(autoincrement())
  title    String
  content  String
}


